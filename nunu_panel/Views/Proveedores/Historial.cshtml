@{
    ViewData["Title"] = "Proveedores";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="container">
 <a asp-controller="Proveedores" asp-action="Index" class="btn btn-link mt-1" style="color: gray;">
     <i class="fas fa-arrow-left"></i> Volver
 </a>
<div class="row mb-3">
    <div class="col">
        <form asp-controller="Pedidos" asp-action="Index">
            <div class="groupSearch">
                <svg class="iconSearch" aria-hidden="true" viewBox="0 0 24 24"><g><path d="M21.53 20.47l-3.66-3.66C19.195 15.24 20 13.214 20 11c0-4.97-4.03-9-9-9s-9 4.03-9 9 4.03 9 9 9c2.215 0 4.24-.804 5.808-2.13l3.66 3.66c.147.146.34.22.53.22s.385-.073.53-.22c.295-.293.295-.767.002-1.06zM3.5 11c0-4.135 3.365-7.5 7.5-7.5s7.5 3.365 7.5 7.5-3.365 7.5-7.5 7.5-7.5-3.365-7.5-7.5z"></path></g></svg>
                <input value="" name="searchTerm" placeholder="Busca" type="search" class="inputSearch">
            </div>
        </form>
    </div>
</div>
<div class="row">
    <div class="d-flex justify-content-between align-items-center">
        <h4 class="title-form">Historial de servicios del proveedor "nombre del proveedor"</h4>
    </div>
</div>

<div class="row">
    <div class="breadcrumb">
        <a href="/Proveedores" class="breadcrumb-item active">Proveedores</a> >
    </div>
    Mostrando 7 de 100 resultados
</div>

<div class="col-md-12 mt-3">
        <table class="table">
            <thead>
                <tr>
                    <th scope="col" class="textTableCenter">ID Compra</th>
                    <th scope="col" class="textTableCenter">Servicio</th>
                    <th scope="col" class="textTableCenter">Usuario</th>
                    <th scope="col" class="textTableCenter">Lugar</th>
                    <th scope="col" class="textTableCenter">Pago</th>
                    <th scope="col" class="textTableCenter">Fecha compra</th>
                    <th scope="col" class="textTableCenter">Calificación</th>
                    <th scope="col" class="textTableCenter"></th>
                </tr>
            </thead>
            <tbody> 
                <tr>                 
                    <td class="td-first">
                        000001
                    </td>
                    <td class="td-middle">Diseño</td>
                    <td class="td-middle">Lorem ipsum dolor</td>
                    <td class="td-middle">Dirección del lugar</td>
                    <td class="td-middle">$000,00</td>
                    <td class="td-middle">00/00/00</td>
                    <td class="td-middle"><a href ="#" data-bs-toggle="modal" data-bs-target="#calificacionModal">00/00</a></td>    
                    <td class="td-end">
                        <div class="dropdown">
                            <button class="btn dropdown-toggle text-dark" type="button" id="dropdownMenuButton1" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                <i class="fas fa-ellipsis-v"></i>
                            </button>
                            <div class="dropdown-menu" aria-labelledby="dropdownMenuButton1">
                                <a class="dropdown-item" asp-controller="Home" asp-action="UsuarioDetalle">Eliminar</a>
                                <a class="dropdown-item" asp-controller="Home" asp-action="UsuarioDetalle">Reportar</a>
                                <a class="dropdown-item" asp-controller="Home" asp-action="UsuarioDetalle">Llamar</a>
                            </div>
                        </div>
                    </td>
                </tr>
                

            
            </tbody>
        </table>
    </div>
</div>




<div class="modal fade" id="calificacionModal" tabindex="-1" role="dialog" aria-labelledby="calificacionodalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title fw-bolder fs-3" id="estatusModalLabel">Calificación Del Servicio</h5>
                <button type="button" class="close" data-bs-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                 <div class="form-group">
                    <label for="">Comentario</label>
                    <input type="text" class="form-control" value="Estuvo Muy Mal El Servicio" readonly>
                </div>
                <div class="form-group">
                    <label for="">Calificación De La Experiencia</label>
                    <input type="text" class="form-control" value="00/00" readonly>
                </div>
                <div class="form-group">
                    <label for="">Calificación Del Proveedor</label>
                    <input type="text" class="form-control" value="00/00" readonly>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="modal fade modal-right" id="leftModal" tabindex="-1" aria-labelledby="leftModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="rightModalLabel">Devolución</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form>
                <p>Razón
                    <div class="form-group">
                        <label for="tipoCliente">Servicios</label>
                        <div class="input-group">
                            <select class="form-control" id="tipoCliente">
                                <option selected>Seleccionar...</option>
                                <option value="1">Cliente A</option>
                                <option value="2">Cliente B</option>
                                <option value="3">Cliente C</option>
                            </select>
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="estatus">Estatus</label>
                        <div class="input-group">
                            <select class="form-control" id="estatus">
                                <option selected>Seleccionar...</option>
                                <option value="1">Activo</option>
                                <option value="2">Inactivo</option>
                                <option value="3">Pendiente</option>
                            </select>
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="cumpleanos">Usuario</label>
                        <div class="input-group">
                            <div class="groupSearch">
                                <svg class="iconSearch" aria-hidden="true" viewBox="0 0 24 24"><g><path d="M21.53 20.47l-3.66-3.66C19.195 15.24 20 13.214 20 11c0-4.97-4.03-9-9-9s-9 4.03-9 9 4.03 9 9 9c2.215 0 4.24-.804 5.808-2.13l3.66 3.66c.147.146.34.22.53.22s.385-.073.53-.22c.295-.293.295-.767.002-1.06zM3.5 11c0-4.135 3.365-7.5 7.5-7.5s7.5 3.365 7.5 7.5-3.365 7.5-7.5 7.5-7.5-3.365-7.5-7.5z"></path></g></svg>
                                <input value="" name="searchTerm" placeholder="Busca por usuario/ID" type="search" class="inputSearch">
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="cumpleanos">Proveedor</label>
                        <div class="input-group">
                            <div class="groupSearch">                                
                                <input value="" name="searchTerm" placeholder="Nombre" type="search" class="inputSearch">
                            </div>
                        </div>
                    </div>
                </form>
                <hr>
                <div class="filter-section">
                    <h6>Filtros aplicados</h6>
                    <div class="filters-applied">
                        <span class="tag">Tipo de Cliente <i class="fas fa-times close"></i></span>
                        <span class="tag">Buscar por Usuario <i class="fas fa-times close"></i></span>
                        <span class="tag">Estatus <i class="fas fa-times close"></i></span>
                        <span class="tag">Cumpleaños <i class="fas fa-times close"></i></span>
                    </div>
                </div>
                <button class="btn btn-primary w-100">Aplicar</button>
            </div>
        </div>
    </div>
</div>